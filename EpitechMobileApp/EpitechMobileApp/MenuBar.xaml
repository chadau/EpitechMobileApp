<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EpitechMobileApp.MenuBar"
                  MasterBehavior="Popover">
    <MasterDetailPage.Master>
        <ContentPage Padding="10" Title="Master" BackgroundColor="#1565C0">
            <ContentPage.Content>
                <StackLayout Margin="5,30,5,5">
                    <Label Text="Navigation" TextColor="White"></Label>
                    <Button Text="Profil" Clicked="Profil_on_Click"></Button>
                    <Button Text="Modules" Clicked="Modules_on_Click"></Button>
                    <Button Text="Planning" Clicked="Planning_on_Click"></Button>
                </StackLayout>
            </ContentPage.Content>
        </ContentPage>
    </MasterDetailPage.Master>

    <MasterDetailPage.Detail>
        <ContentPage Padding="10">
            <ContentPage.Content>
                <StackLayout Margin="5,30,5,5">
                    <Label Text="Detail Page"></Label>
                </StackLayout>
            </ContentPage.Content>
        </ContentPage>
    </MasterDetailPage.Detail>
</MasterDetailPage>